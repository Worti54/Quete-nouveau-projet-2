{% extends 'base.html.twig' %}

{% block title %}All categories {% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}

    <h1>All categories from article's table : </h1>
    {% for category in categories %}
        <div>
            <h2>{{loop.index}} : {{ category.name }}</h2>
        </div>
    {% endfor %}
    <a href="{{ path('homepage') }}">
        Back to homepage.
    </a>
{% endblock %}
